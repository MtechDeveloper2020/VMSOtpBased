<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0EDF2"
    android:gravity="center_vertical"
   >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <ImageView
                android:id="@+id/register_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="15dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M-Tech Innovations Ltd "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#cc0000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/login_txt_forget_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Choose the type of Account"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/account_btn_admin"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_account"
                android:padding="10dp"
                android:drawableLeft="@drawable/user"
                android:text="ADMIN ACCOUNT"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:onClick="admin"/>

            <Button
                android:id="@+id/account_btn_visitor"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_visitor"
                android:padding="10dp"
                android:drawableLeft="@drawable/user"
                android:text="VISITOR ACCOUNT"
                android:textColor="#FFFFFF"
                android:onClick="visitor"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>